<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".TipoJuego">
    <LinearLayout
        android:id="@+id/l1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/idLayoutFondo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp">
            <ImageView
                android:id="@+id/im"
                android:layout_width="60dp"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/juego" />

            <TextView
                android:id="@+id/nivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Elegir mundo para jugar"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold|italic" />
        </RelativeLayout>
        <TextView
            android:id="@+id/separadorId"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#A4FF9800" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/l1"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/Lstone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/idAvatar"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:background="@drawable/stone"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/barraSeleccionId"
                android:layout_width="match_parent"
                android:text="stone"
                android:textColor="#FF5722"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:textSize="18dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LUniverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageCategoryBg"
                    android:background="@drawable/universe"
                    android:layout_width="135dp"
                    android:layout_height="100dp"/>

                <!--<ImageView
                    android:layout_width="88dp"
                    android:layout_height="78dp"
                    android:background="#7AE91E63" />-->
                <ImageView
                    android:id="@+id/imDesbloUniverse"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:visibility="visible"
                    android:background="@drawable/ic_candado"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:text="Universe"
                android:textColor="#FF5722"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:textSize="18dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imfonter"
                    android:background="@drawable/darkblack"
                    android:layout_width="135dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:id="@+id/imDesbloDark"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:visibility="visible"
                    android:background="@drawable/ic_candado"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:text="Dark black"
                android:textColor="#FF5722"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:textSize="18dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <com.appnext.banners.BannerView
        android:id="@+id/banerop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:bannerSize="BANNER"
        app:placementId="da374833-5714-400f-a5c4-311747d5b1f0" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnIcoAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:onClick="btnregresar"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        app:srcCompat="@color/teal_700"
        android:src="@drawable/ic_home"/>
</RelativeLayout>