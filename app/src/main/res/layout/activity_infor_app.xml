<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".InforApp">
    <LinearLayout
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
    </LinearLayout>
    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barra"
        android:layout_marginTop="0dp"
        android:src="@drawable/nave" />
    <TextView
        android:id="@+id/textNickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatarImage"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="#FB8C00"
        android:textSize="32dp"
        android:textStyle="bold|italic" />
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textNickName">
        <TextView
            android:id="@+id/txtResultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Acerca De"
            android:textColor="#fff"
            android:textSize="26dp"
            android:textStyle="bold|italic" />
        <TextView
            android:id="@+id/txtAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Desarrollado por: CoDevPro"
            android:textColor="#fff"
            android:textSize="26dp"
            android:textStyle="bold|italic" />
        <TextView
            android:id="@+id/txtCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Versión del juego: 1.5"
            android:textColor="#fff"
            android:textSize="26dp"
            android:textStyle="bold|italic" />
        <TextView
            android:id="@+id/txtContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Iquitos - Perú"
            android:textColor="#fff"
            android:textSize="26dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <!--<com.startapp.sdk.ads.banner.Banner
        android:id="@+id/startAppBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />-->
    <com.appnext.banners.BannerView
        android:id="@+id/banerin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:bannerSize="BANNER"
        app:placementId="da374833-5714-400f-a5c4-311747d5b1f0" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnIcoAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        app:srcCompat="@color/teal_700"
        android:src="@drawable/ic_confi"/>
</RelativeLayout>