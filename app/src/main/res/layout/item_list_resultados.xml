<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FF9800"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardAvatar"
        android:layout_margin="3dp">
        <LinearLayout
            android:background="#8BFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idAvatar"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:src="@drawable/nave"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="NickName"
                    android:textColor="#FF5722"
                    android:textSize="18dp"
                    android:textStyle="bold|italic" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GÃ©nero:"
                        android:textStyle="bold|italic"
                        android:layout_marginRight="5dp"
                        android:textColor="#000"/>
                    <TextView
                        android:id="@+id/idGenero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold|italic"
                        android:textColor="#1E88E5"
                        android:text="Masculino" />
                </LinearLayout>
                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo juego:"
                        android:textSize="12dp"
                        android:textStyle="bold|italic"
                        android:layout_marginRight="5dp"
                        android:textColor="#000"/>
                    <TextView
                        android:id="@+id/idNivel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="12dp"
                        android:textColor="#1E88E5"
                        android:textStyle="bold|italic"
                        android:text="Operaciones matematicas" />

                </LinearLayout>-->
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/idTextoPuntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="44dp"
                    android:layout_marginRight="0dp"
                    android:text="PUNTAJE"
                    android:textColor="@color/teal_700"
                    android:textSize="14dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/idPuntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idTextoPuntos"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="64dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="100 "
                    android:textColor="#E91E63"
                    android:textStyle="bold|italic"
                    android:textSize="25sp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>