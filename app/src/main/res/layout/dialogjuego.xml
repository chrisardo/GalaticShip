<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/barraSuperiorId"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#673AB7"
        android:elevation="6dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/im"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pausar" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="SpaceApp"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginRight="6dp"
            android:clickable="true"
            android:background="@drawable/ic_cancelar"
            android:text="Salir" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnContinua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:drawableLeft="@drawable/ic_reiniciar"
            android:background="#FF9800"
            android:text="Reiniciar el juego"
            android:textStyle="bold|italic"/>

        <Button
            android:id="@+id/btnAyud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:drawableLeft="@drawable/ayuda"
            android:background="#009688"
            android:textStyle="bold|italic"
            android:text="Indicaciones del juego" />

        <Button
            android:id="@+id/btnsalirJuego"
            android:textColor="#fff"
            android:drawableLeft="@drawable/salir"
            android:background="#F44336"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:text="Salir del juego" />
    </LinearLayout>
</LinearLayout>